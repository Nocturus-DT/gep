<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifpr.gep.panel.consulta.ConsultController">
    <children>
        <Label text="Menu de Consultas" textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Button fx:id="todosButton" text="Todos" onAction="#consultarTodos" />
        <Button fx:id="portariaButton" text="Portaria" onAction="#consultarPortaria" />
        <Button fx:id="emissorButton" text="Emissor" onAction="#consultarEmissor" />
        <Button fx:id="numeroButton" text="Número" onAction="#consultarNumero" />
        <Button fx:id="publicacaoButton" text="Publicação" onAction="#consultarPublicacao" />
        <Button fx:id="periodoButton" text="Período" onAction="#consultarPeriodo" />
        <Button fx:id="nomeButton" text="Nome" onAction="#consultarNome" />
        <Button fx:id="voltarButton" text="Voltar" onAction="#voltar" />
    </children>
</VBox>