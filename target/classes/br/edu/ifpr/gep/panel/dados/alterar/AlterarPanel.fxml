<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <TabPane prefHeight="500.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Untitled Tab 1">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <VBox prefHeight="200.0" prefWidth="750.0">
                        <children>
                            <HBox spacing="10" style="-fx-padding: 10;">
                                <Label text="Emissor:" />
                                <TextField fx:id="emissorField" promptText="Digite o emissor" />
                                <Label text="Número:" />
                                <TextField fx:id="numeroField" promptText="Digite o número" />
                                <Label text="Ano:" />
                                <TextField fx:id="anoField" promptText="Digite o ano" />
                                <Button onAction="#adicionarItem" text="Adicionar" />
                            </HBox>
                           <HBox prefHeight="11.0" prefWidth="710.0" style="-fx-padding: 10;">
                              <children>
                                 <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="59.0" text="Incluir" />
                              </children>
                           </HBox>
                        
                                           <TableView fx:id="tabela" style="-fx-pref-height: 200;">
                                <columns>
                                    <TableColumn fx:id="emissorColumn" prefWidth="150" text="Emissor" />
                                    <TableColumn fx:id="numeroColumn" prefWidth="100" text="Número" />
                                    <TableColumn fx:id="anoColumn" prefWidth="100" text="Ano" />
                                 <TableColumn prefWidth="98.0">
                                    <graphic>
                                       <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="90.0" text="Deletar Tudo" />
                                    </graphic>
                                 </TableColumn>
                                </columns>
                            </TableView>
                        </children>
                     </VBox>
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="Untitled Tab 2">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
         </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
